@model IEnumerable<BookMyTickets.Models.Movie>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    header {
        background: #333545;
    }

    #NameOfCompany {
        font-size: x-large;
        color: white;
    }

    #secondary-nav {
        background: #1f2533;
        color: white;
    }

    #primary-nav {
        background: #333545;
        color: white;
    }

    #slider {
        margin: 1vh;
        width: auto;
        height: 320px;
        overflow: hidden;
        position: relative;
        background-color: transparent;
    }

    .page-wrapper,
    .content-wrapper {
        background: #f2f2f2;
        margin: 0;
        padding: 0;
    }

    .content-wrapper {
        margin-top: 1vh;
        margin-bottom: 0vh;
        margin-left: 4vw;
        margin-right: 4vw;
        padding: 2vh 2vw;
    }

    .headingOfContent {
        height: 14vh;
    }

    .list {
        padding-top: 0.6vh;
    }

    .headingList {
        display: inline;
        margin-left: 1vw;
    }

    .Nowshowing {
        color: black;
    }

    .Upcoming {
        color: black;
    }

    .selected {
        font-size: large;
        background-color: rgba(243, 194, 194, 0.932);
    }

    .MoviesFilter {
        float: left;
    }

    #calender {
        margin-top: 1vh;
        margin-bottom: 3vh;
    }

    .year {
        margin-bottom: 2vh;
    }

    button {
        padding: 0.5vh 0.5vw;
        border-color: rgb(199, 198, 198);
        border-radius: 0.7vh;
        -webkit-border-radius: 0.7vh;
        -moz-border-radius: 0.7vh;
        -ms-border-radius: 0.7vh;
        -o-border-radius: 0.7vh;
    }

    .yearInButtonclick,
    .monthINButtonclick {
        background-color: #0072FF;
        color: white;
    }

    #navHome {
        background-color: aliceblue;
    }
</style>
<div id="slider">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://source.unsplash.com/1360x320/?movieposter,cinema,moviesTickets" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://source.unsplash.com/1360x320/?movieposter,cinema,moviesTickets,cinemaTickets" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://source.unsplash.com/1360x320/?bollywood,cinema,webseries,CinemaTickets" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="page-wrapper">
    <div class="content-wrapper">
        <div class="headingOfContent">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-5">
                        <h4 id="headingOfMovieShowcaseing">Current Movies</h4>
                    </div>
                    <div class="col-6">
                        <div class="list">
                            <ul class="headUl">
                                <li class="headingList"><a style="size: 23px;" id="aOfNow" class="Nowshowing selected">NowShowing</a></li>
                                <li class="headingList"><a id="aOfUp" class="Upcoming">Coming Soon</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container moviesBody ">
            <div class="MoviesFilter">
                <div class="container">
                    <div class="filterHeading">
                        <h4>Filter By </h4>
                        <hr>
                    </div>
                    <div class="filterBody">
                        <label for="Language">Choose a Language:</label>
                        <div>
                            <select name="Language" id="Language">
                                <option value="Hindi">Hindi</option>
                                <option value="English">English</option>
                                <option value="Gujarati">Gujarati</option>
                                <option value="Marathi">Marathi</option>
                            </select>
                        </div>
                        <label for="Date">Date:</label>
                        <div>
                            <input type="date" id="Date" name="Date">
                        </div>
                        <label for="Type">Type of Movie:</label>
                        <div>
                            <select name="Type" id="Type">
                                <option value="Action">Action</option>
                                <option value="Drama">Drama</option>
                                <option value="Romantic">Romantic</option>
                                <option value="Horror">Horror</option>
                                <option value="ScienceFiction">ScienceFiction</option>
                                <option value="Comedy">Comedy</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="MoviesShowcase">
                <div class="container">
                    <div id="calender">
                        <div class="year">
                            <div class="container">
                                <div class="row">
                                    <div class="col"><button class="yearInButton">2020</button></div>
                                    <div class="col"><button class="yearInButton">2021</button></div>
                                    <div class="col"><button class="yearInButton">2023</button></div>
                                </div>
                            </div>
                        </div>
                        <div class="month">
                            <div class="container">
                                <div class="row">
                                    <div class="col"><button class="monthINButton">FEB</button></div>
                                    <div class="col"><button class="monthINButton">JAN</button></div>
                                    <div class="col"><button class="monthINButton">MAR</button></div>
                                    <div class="col"><button class="monthINButton">APR</button></div>
                                    <div class="col"><button class="monthINButton">MAY</button></div>
                                    <div class="col"><button class="monthINButton">JUN</button></div>
                                    <div class="col"><button class="monthINButton">JUL</button></div>
                                    <div class="col"><button class="monthINButton">AUG</button></div>
                                    <div class="col"><button class="monthINButton">SEP</button></div>
                                    <div class="col"><button class="monthINButton">OCT</button></div>
                                    <div class="col"><button class="monthINButton">NOV</button></div>
                                    <div class="col"><button class="monthINButton">DEC</button></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @foreach (var item in Model)
                        {                          
                                <div class="column">
                                    <div class="card" style="width: 18rem;">
                                            <img src="@Html.DisplayFor(modelItem => item.PosterUrl)" class="card-img-top" alt="...">
                                            <div class="card-body">
                                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.MovieName)</h5>
                                                <p class="card-text">Genre:- @Html.DisplayFor(modelItem => item.Genre)</p>
                                                <p>Writre Movie Name</p>
                                                @using (Html.BeginForm("BookingPhase1", "Shows", FormMethod.Post))
                                                {
                                                    @Html.TextBox("MovieName")
                                                    <input type="submit" class="btn btn-primary" value="Buy Tickets">
                                                }

                                            </div>
                                    </div>
                                </div>                            
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            console.log("index page is loaded!!");
        });
        $(document).ready(function () {
            $(".Upcoming").click(function () {
                if ($("#aOfNow").hasClass('selected') == true) {
                    $("#aOfNow").removeClass("selected");
                    $(".Upcoming").addClass("selected");
                    $("#headingOfMovieShowcaseing").text("UpComing Movies");
                }
            });
        });
        $(document).ready(function () {
            $("#aOfNow").click(function () {
                if ($("#aOfNow").hasClass('selected') != true) {
                    $("#aOfNow").addClass("selected");
                    $(".Upcoming").removeClass("selected");
                    $("#headingOfMovieShowcaseing").text("Current Movies");
                }
            });
        });
        $(document).ready(function () {

            $('.nav-link').hover(function () {
                $(this).css("background-color", "grey");
            },
                function () {
                    $(this).css("background-color", " #1f2533");
                });
        });
        $(document).ready(function () {

            $('.active').hover(function () {
                $(this).css("background-color", "grey");
            },
                function () {
                    $(this).css("background-color", "white");
                });
        });
        $(document).ready(function () {

            $('.yearInButton').hover(function () {
                $(this).css("background-color", "#0078FF").css("color", "white");
            },
                function () {
                    $(this).css("background-color", "#F2F2F2").css("color", "black");
                });
            $('.monthINButton').hover(function () {
                $(this).css("background-color", "#0078FF").css("color", "white");
            },
                function () {
                    $(this).css("background-color", "#F2F2F2").css("color", "black");
                });


        });

        $(document).ready(function () {
            $("button").click(function () {

                $(this).toggleClass(".yearInButtonclick");
            });


        });
        $(document).ready(function () {

            $('.monthINButton').click(function () {
                $(this).toggleClass("monthINButtonclick");
            });

        });

        $(document).ready(function () {
            if ($("#aOfNow").hasClass('selected') == true) {
                $("#calender").hide();
            }
            $("#aOfNow").click(function () {

                $("#calender").hide();
            });
            $(".Upcoming").click(function () {
                $("#calender").show();
            });
        });
    </script>

}